@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}


<div class="login-box">
    <!-- /.login-logo -->
    <div class="card card-outline card-primary">
        <div class="card-header text-center">
            <a  class="h1"><b>Planning</b>Paradise</a>
        </div>
        <div class="card-body">
            <p class="login-box-msg">login Form</p>
            <form id="account" method="post">
                <div class="input-group mb-3">
                    <input type="email" asp-for="Input.Email" class="form-control" placeholder="Email">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-envelope"></span>
                        </div>
                    </div>
                </div>
                <div class="input-group mb-3">
                    <input type="password" asp-for="Input.Password" class="form-control" placeholder="Password">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-lock"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    
                    
                    <!-- /.col -->
                    <div class="col-4">
                        <button type="submit" class="btn btn-primary btn-block">Sign In</button>
                    </div>
                    <!-- /.col -->
                </div>

            </form>
           
        </div>

    </div>
</div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
