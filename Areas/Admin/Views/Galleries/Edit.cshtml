@model PlanningParadiseAdmin.ViewModel.GalleryVM

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Blogs</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Blogs</a></li>
                    <li class="breadcrumb-item active">Edit Gallery</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <!-- general form elements -->
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Blog Details</h3>
                    </div>

                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="ID" />
                        <input type="hidden" asp-for="ExistingGallery_Img" />
                        <div class="form-group">
                            <label asp-for="Gallery_Img" class="control-label"></label>
                            <input asp-for="Gallery_Img" type="file" class="form-control" />
                            <span asp-validation-for="Gallery_Img" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Gallery_Video" class="control-label"></label>
                            <input asp-for="Gallery_Video" class="form-control" />
                            <span asp-validation-for="Gallery_Video" class="text-danger"></span>
                        </div>
                        <div class="form-group form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                            </label>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                        <div class="col-md-6">
                            <img class="img-fluid" src="~/Images/services/@Model.Gallery_Img" alt="Blog Image" />
                        </div>
                    </form>
                </div>
            </div>

            <div>
                <a asp-action="Index">Back to List</a>
            </div>

            @section Scripts {
                @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
            }
