@model PlanningParadiseAdmin.ViewModel.SliderVM

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Sliders</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Sliders</a></li>
                    <li class="breadcrumb-item active">Edit Sliders</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <!-- general form elements -->
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Slider Content</h3>
                    </div>
                    <form asp-action="Edit">
                        <div class="card-body">
                            <div class="row">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="ID" />
                                <input type="hidden" asp-for="ExistingSlider_Img" />

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Slider_Img" class="control-label"></label>
                                        <input asp-for="Slider_Img" type="file" class="form-control" />
                                        <span asp-validation-for="Slider_Img" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Slider_Heading" class="control-label"></label>
                                        <input asp-for="Slider_Heading" class="form-control" />
                                        <span asp-validation-for="Slider_Heading" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Slider_SubHead" class="control-label"></label>
                                        <input asp-for="Slider_SubHead" class="form-control" />
                                        <span asp-validation-for="Slider_SubHead" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Slider_Order" class="control-label"></label>
                                        <input asp-for="Slider_Order" class="form-control" />
                                        <span asp-validation-for="Slider_Order" class="text-danger"></span>
                                    </div>
                                    <div class="form-group form-check">
                                        <label class="form-check-label">
                                            <input class="form-check-input" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                                        </label>
                                    </div>
                                    
                                    <div class="form-group">
                                        <input type="submit" value="Save" class="btn btn-primary" />
                                    </div>
                                    <div>
                                        <a asp-action="Index">Back to List</a>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="col-md-6">
                                        <img class="img-fluid" src="~/Images/slider/@Model.Slider_Img" alt="Slider Image" />
                                    </div>
                                </div>
                            </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
