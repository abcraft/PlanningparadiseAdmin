@model IEnumerable<PlanningParadiseAdmin.Models.Services>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Service_Img)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Service_Heading)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Servie_Text)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <img class="img-fluid" src="~/Images/services/@item.Service_Img" alt="Blog Image" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Service_Heading)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Servie_Text)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
