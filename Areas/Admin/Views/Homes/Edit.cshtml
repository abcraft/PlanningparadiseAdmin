@model PlanningParadiseAdmin.Models.Home

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Home</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Edit</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- general form elements -->
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Home Text & Headings Edit</h3>
                    </div>
                    <form asp-action="Edit">
                        <div class="card-body">
                            <div class="row">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="Id" />
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Welcome_Heading" class="control-label"></label>
                                        <input asp-for="Welcome_Heading" class="form-control" />
                                        <span asp-validation-for="Welcome_Heading" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Welcome_Text" class="control-label"></label>
                                        <input asp-for="Welcome_Text" class="form-control" />
                                        <span asp-validation-for="Welcome_Text" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="WWA_Heading" class="control-label"></label>
                                        <input asp-for="WWA_Heading" class="form-control" />
                                        <span asp-validation-for="WWA_Heading" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="WWA_Text" class="control-label"></label>
                                        <input asp-for="WWA_Text" class="form-control" />
                                        <span asp-validation-for="WWA_Text" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <input type="submit" value="Save" class="btn btn-primary" />
                                    </div>
                                </div>
                                    
                                   
                                </div>
                            </div>
                    </form>
                    
                </div>
            </div>
        </div>
    </div>
</section>
