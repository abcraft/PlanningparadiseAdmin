@model PlanningParadiseAdmin.Models.Testimonial

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Edit</h1>

<h4>Testimonial</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="Testimonial_Img" class="control-label"></label>
                <input asp-for="Testimonial_Img" class="form-control" />
                <span asp-validation-for="Testimonial_Img" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Testimonial_Name" class="control-label"></label>
                <input asp-for="Testimonial_Name" class="form-control" />
                <span asp-validation-for="Testimonial_Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Testimonial_Text" class="control-label"></label>
                <input asp-for="Testimonial_Text" class="form-control" />
                <span asp-validation-for="Testimonial_Text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Testimonial_Order" class="control-label"></label>
                <input asp-for="Testimonial_Order" class="form-control" />
                <span asp-validation-for="Testimonial_Order" class="text-danger"></span>
            </div>
