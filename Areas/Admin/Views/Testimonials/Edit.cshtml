@model PlanningParadiseAdmin.ViewModel.TestimonialVM

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Edit</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Testimonial</a></li>
                    <li class="breadcrumb-item active">Edit</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <!-- general form elements -->
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Testimonial Content</h3>
                    </div>
                    <form asp-action="Edit" enctype="multipart/form-data">
                        <div class="card-body">
                            <div class="row">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="ID" />
                                <div class="col-md-6">
                                    @*<div class="form-group">
                                        <label asp-for="Testimonial_Img" class="control-label"></label>
                                        <input asp-for="Testimonial_Img" type="file" class="form-control" />
                                        <span asp-validation-for="Testimonial_Img" class="text-danger"></span>
                                    </div>*@
                                    <div class="form-group">
                                        <label asp-for="Testimonial_Name" class="control-label"></label>
                                        <input asp-for="Testimonial_Name" class="form-control" />
                                        <span asp-validation-for="Testimonial_Name" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Testimonial_Text" class="control-label"></label>
                                        <textarea asp-for="Testimonial_Text" class="form-control" rows="5"></textarea>
                                        <span asp-validation-for="Testimonial_Text" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Testimonial_Order" class="control-label"></label>
                                        <input asp-for="Testimonial_Order" class="form-control" />
                                        <span asp-validation-for="Testimonial_Order" class="text-danger"></span>
                                    </div>
                                    <div class="form-group form-check">
                                        <label class="form-check-label">
                                            <input class="form-check-input" asp-for="IsAvtive" /> @Html.DisplayNameFor(model => model.IsAvtive)
                                        </label>
                                    </div>
                                    <div class="form-group">
                                        <input type="submit" value="Save" class="btn btn-primary" />
                                    </div>
                                    <div>
                                        <a asp-action="Index">Back to List</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            

            @section Scripts {
                @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
            }
