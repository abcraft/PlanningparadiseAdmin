@model IEnumerable<PlanningParadiseAdmin.Models.AboutUs>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.About_Heading)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.About_Para1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.About_Para2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.About_Para3)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.About_Qoute)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.About_Heading)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.About_Para1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.About_Para2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.About_Para3)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.About_Qoute)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
