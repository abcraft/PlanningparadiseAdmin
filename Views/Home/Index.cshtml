        <div id="custom-owl-slider" class="owl-slide" data-scroll-speed="2">
            @{
                var Sliders = SessionHelper.GetObjectFromJson<IList<SliderVM>>(Context.Session, "Sliders");
                if (Sliders != null)
                {
                    foreach (var item in Sliders.GroupBy(Obj => new { Obj.ID }).Distinct().ToList())
                    {
                    <div class="item">
                        <img src="~/Images/slider/@item.FirstOrDefault().Slider_Img" alt="">
                        <div class="fadeScroll" style="position: absolute; top: 55%; left: 10%;">
                            <h1 class='s2'>@item.FirstOrDefault().Slider_Heading</h1>
                            <h4 class='s3'>@item.FirstOrDefault().Slider_SubHead</h4>
                            <div class="spacer-double"></div>
                        </div>
                        <div class="overlay"></div>
                    </div>
                    }
                }
                }
                   
                </div>

