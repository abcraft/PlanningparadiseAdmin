@model PlanningParadiseAdmin.Models.Home
@{
    ViewData["Title"] = "Home - The Planning Paradise";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
@using Microsoft.AspNetCore.Identity;
@using PlanningParadiseAdmin.Data;
