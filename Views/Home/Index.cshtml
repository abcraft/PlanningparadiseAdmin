<!-- Testimonial  -->
<section id="testimonial" class="testimonial owl-carousel text-center">
    @{
        var testimonials = SessionHelper.GetObjectFromJson<IList<TestimonialVM>>(Context.Session, "Testimonials");
        if (testimonials != null)
        {
            foreach (var item in testimonials.GroupBy(Obj => new { Obj.ID }).Distinct().ToList())
            {
                <div class="test-slide">
                    <div class="item">
                        <div class="testimonial4_slide">

                            <p style=" text-overflow: ellipsis;">
                                @item.FirstOrDefault().Testimonial_Text
                            </p>
                            <h4>@item.FirstOrDefault().Testimonial_Name</h4>
                        </div>
                    </div>
                </div>
                }
            }
        }
                
            </section>
<!-- Testimonial End -->
<!-- section begin -->
<section class="call-to-action bg-color text-light pt40 pb30 bg-color">
